{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "./js",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["ts/**/*", "main.ts"],
  "exclude": ["node_modules"]
}
